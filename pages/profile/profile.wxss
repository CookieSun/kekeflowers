/* pages/profile/profile.wxss */
.container{
	 padding: 0 0;
	 height:1000rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#16eab4;
  width:100%;
  height:400rpx;
  overflow:hidden;
 
}
/* .account-bg {
  width: 100%;
  height: 100%;
} */
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 40rpx;
  margin-top:50rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
}
/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border:2rpx #AAAAAA solid;
  margin-top:10rpx;
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}
.navs {
  display: flex;
  width:100%;
  height:160rpx;
  border:2rpx #AAAAAA solid;
  margin-top:10rpx;
  
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;

}
.nav-item .nav-image {
 width: 40rpx;
  height: 60rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}
/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  height:300rpx;
  align-items: left;
  margin-top:20rpx;
  margin-left:-450rpx;
}
.list-item {
  display: flex;
  flex-direction: row;
  left:0;
  align-items: center;
  height: 140rpx;
  margin-top:20rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
  
}
.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}
